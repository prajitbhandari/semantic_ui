<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.editor? %>
    <div class="field">
      <%= form.label :address %><br />
      <%= form.text_field :address, autofocus: true, autocomplete: "email" %>
    </div>
  <% else %>
    <div class="field">
      <%= form.label :email %><br />
      <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= form.label :roles %><br />
      <%= form.select :roles, user.available_roles, {}, {multiple: true}%>
    </div>

    <div class="field">
      <%= form.label :address %><br />
      <%= form.text_field :address, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= form.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= form.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %><br />
      <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  <% end %>
<!--  <div class="field">-->
<!--    <%#= form.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />-->
    <%#= form.password_field :current_password, autocomplete: "current-password" %>
<!--  </div>-->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
